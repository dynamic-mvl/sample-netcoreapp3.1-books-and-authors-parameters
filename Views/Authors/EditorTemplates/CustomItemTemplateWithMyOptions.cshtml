@using DynamicVML
@using DynamicVML.Extensions
@model BookAuthors.ViewModels.IMyOptions

@{
    string btnclass = ViewData["ButtonClass"] as string;
    if (btnclass == null)
        btnclass = "close";
}

@* This is a custom template that you can customize to your liking *@

<div class="card mt-2">
    <div class="card-header container-fluid">
        <div class="row">
            <div class="col-10">
                <div class="card-title">@Model.Title</div>
            </div>
            <div class="col-2 float-right">
                @if (Model.CanRemove)
                {
                    <button type="button" class="@btnclass " onclick="dvml.remove('@Model.Index')">x</button>
                }
            </div>
        </div>
        <div class="row">
            <div class="card-subtitle text-muted pl-3">@Model.Subtitle</div>
        </div>
    </div>
    <div class="card-body">
        @Html.RenderDynamicItemEditor()
    </div>
</div>
