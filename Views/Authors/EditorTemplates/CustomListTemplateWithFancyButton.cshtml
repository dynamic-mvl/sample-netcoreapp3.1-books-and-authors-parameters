@using DynamicVML
@using DynamicVML.Extensions
@model IDynamicList
@* This is a custom template that you can customize to your liking *@


@* Note: in a real application we would include styles somewhere else, this is just to simplify the example: *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



<input type="hidden" asp-for="ContainerId" />

<div class="col-12">
    <div class="row">
        <div class="col-12 p-0">
            <div id="@Model.ContainerId" name="dynamic-list">
                @{ Html.RenderDynamicListEditor(); }
            </div>
        </div>
    </div>
    <div class="row mr-1 text-right">
        <div class="col-12 mt-5 mb-2 text-right">
            <button type="button" onclick="dvml.add('@Model.ContainerId', '@Html.GetDynamicListActionUrl()');">
                @Html.RenderDynamicListAddNewItemText() <i class="fa fa-plus-square"></i>
            </button>
        </div>
    </div>
</div>
